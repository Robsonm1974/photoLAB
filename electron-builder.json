{
  "appId": "com.photomanager.photolab",
  "productName": "PhotoLab",
  "copyright": "Â© 2024 PhotoManager",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "build/**/*",
    "src/main/**/*",
    "src/python/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "src/python",
      "to": "python",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": {
      "target": "nsis",
      "arch": ["x64"]
    },
    "icon": "src/assets/icon.ico",
    "requestedExecutionLevel": "asInvoker"
  },
  "mac": {
    "target": {
      "target": "dmg",
      "arch": ["x64", "arm64"]
    },
    "icon": "src/assets/icon.icns",
    "category": "public.app-category.photography"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "src/assets/icon.png",
    "category": "Graphics"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
